<div class="container" style="max-width: 1200px; margin: 0 auto; padding: 2rem 1rem;">
  <h1 class="page-title" style="font-size: 2.5rem; font-weight: 700; margin-bottom: 1rem; background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
    Категории
  </h1>

  <p style="color: var(--gray-600); font-size: 1.125rem; margin-bottom: 3rem;">
    Выберите интересующую вас категорию продуктов
  </p>

  <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 2rem;">
    <% @categories.each do |category| %>
      <%= link_to category_path(category), style: "text-decoration: none; color: inherit;" do %>
        <div class="glass-card" style="padding: 2rem; height: 100%; transition: all 0.3s ease; cursor: pointer;">
          <!-- Иконка категории -->
          <div style="width: 80px; height: 80px; margin: 0 auto 1.5rem; background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%); border-radius: 1rem; display: flex; align-items: center; justify-content: center;">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <%= category_icon_svg(category.slug) %>
            </svg>
          </div>

          <!-- Название категории -->
          <h2 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 0.75rem; text-align: center;">
            <%= category.name %>
          </h2>

          <!-- Описание -->
          <% if category.description.present? %>
            <p style="color: var(--gray-600); text-align: center; margin-bottom: 1rem; line-height: 1.6;">
              <%= category.description %>
            </p>
          <% end %>

          <!-- Количество продуктов -->
          <div style="text-align: center; padding-top: 1rem; border-top: 1px solid rgba(255,255,255,0.1);">
            <span style="color: var(--accent); font-weight: 600;">
              <%= pluralize(category.products.published.count, 'продукт', 'продукта', 'продуктов') %>
            </span>
          </div>

          <!-- Стрелка -->
          <div style="text-align: center; margin-top: 1rem;">
            <span style="display: inline-flex; align-items: center; color: var(--primary); font-size: 0.875rem; font-weight: 600;">
              Смотреть
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-left: 0.5rem;">
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
