<% content_for :title, "Управление подролями" %>

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-8);">
  <h1 style="font-size: 1.875rem; font-weight: 700; color: var(--gray-900);">
    Подроли
  </h1>
  <%= link_to "Создать роль", new_admin_sub_role_path, class: "btn btn-primary" %>
</div>

<!-- Статистика -->
<div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: var(--space-6); margin-bottom: var(--space-8);">
  <div class="admin-stat-card">
    <div style="font-size: 0.875rem; color: var(--gray-600); margin-bottom: var(--space-2);">Всего ролей</div>
    <div style="font-size: 2rem; font-weight: 700; color: var(--primary);"><%= @stats[:total_roles] %></div>
  </div>
  <div class="admin-stat-card">
    <div style="font-size: 0.875rem; color: var(--gray-600); margin-bottom: var(--space-2);">Системных</div>
    <div style="font-size: 2rem; font-weight: 700; color: var(--color-warning);"><%= @stats[:system_roles] %></div>
  </div>
  <div class="admin-stat-card">
    <div style="font-size: 0.875rem; color: var(--gray-600); margin-bottom: var(--space-2);">Кастомных</div>
    <div style="font-size: 2rem; font-weight: 700; color: var(--secondary);"><%= @stats[:custom_roles] %></div>
  </div>
</div>

<!-- Таблица подролей -->
<div class="card">
  <table class="admin-table">
    <thead>
      <tr>
        <th style="width: 60px;">ID</th>
        <th>Название</th>
        <th>Отображаемое имя</th>
        <th style="width: 80px;">Уровень</th>
        <th style="width: 120px;">Тип</th>
        <th style="text-align: center; width: 100px;">Польз.</th>
        <th style="text-align: center; width: 100px;">Контент</th>
        <th style="text-align: right;">Действия</th>
      </tr>
    </thead>
    <tbody>
      <% @sub_roles.each do |role| %>
        <tr>
          <td style="color: var(--gray-600); font-size: 0.875rem;"><%= role.id %></td>
          <td>
            <code style="padding: var(--space-1) var(--space-2); background: var(--gray-100); border-radius: var(--radius-sm); font-size: 0.8125rem; color: var(--gray-800);"><%= role.name %></code>
          </td>
          <td style="font-weight: 500; color: var(--gray-900);"><%= role.display_name %></td>
          <td>
            <span class="badge badge-primary"><%= role.level %></span>
          </td>
          <td>
            <% if role.system_role? %>
              <span class="badge badge-warning">Системная</span>
            <% else %>
              <span class="badge badge-secondary">Кастомная</span>
            <% end %>
          </td>
          <td style="text-align: center; color: var(--gray-700); font-weight: 500;"><%= role.users_count %></td>
          <td style="text-align: center; color: var(--gray-700); font-weight: 500;"><%= role.content_count %></td>
          <td style="text-align: right;">
            <div style="display: flex; gap: var(--space-2); justify-content: flex-end;">
              <%= link_to "Показать", admin_sub_role_path(role), class: "btn btn-sm btn-outline" %>
              <% unless role.system_role? %>
                <%= link_to "Изменить", edit_admin_sub_role_path(role), class: "btn btn-sm btn-outline" %>
                <%= button_to "Удалить", admin_sub_role_path(role), method: :delete,
                    data: { confirm: 'Вы уверены?' },
                    class: "btn btn-sm btn-danger" %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @sub_roles.empty? %>
    <div style="padding: var(--space-12); text-align: center; color: var(--gray-500);">
      Роли не найдены
    </div>
  <% end %>
</div>

<%= paginate @sub_roles %>
