<% settings = integration.settings %>

<div style="margin-bottom: var(--space-5);">
  <%= label_tag 'integration_setting[settings][currency]', 'Валюта', style: "display: block; font-weight: 600; color: var(--gray-700); margin-bottom: var(--space-2);" %>
  <%= select_tag 'integration_setting[settings][currency]',
      options_for_select([['Российский рубль (RUB)', 'RUB'], ['Доллар США (USD)', 'USD'], ['Евро (EUR)', 'EUR']], settings['currency'] || 'RUB'),
      style: "width: 100%; padding: var(--space-3); border: 2px solid var(--gray-200); border-radius: var(--radius-md); font-size: 1rem;" %>
</div>

<div style="margin-bottom: var(--space-5);">
  <%= label_tag 'integration_setting[settings][widget_skin]', 'Тема виджета', style: "display: block; font-weight: 600; color: var(--gray-700); margin-bottom: var(--space-2);" %>
  <%= select_tag 'integration_setting[settings][widget_skin]',
      options_for_select([['Современная', 'modern'], ['Классическая', 'classic'], ['Минималистичная', 'mini']], settings['widget_skin'] || 'modern'),
      style: "width: 100%; padding: var(--space-3); border: 2px solid var(--gray-200); border-radius: var(--radius-md); font-size: 1rem;" %>
</div>

<div style="margin-bottom: var(--space-5);">
  <%= label_tag 'integration_setting[settings][widget_language]', 'Язык виджета', style: "display: block; font-weight: 600; color: var(--gray-700); margin-bottom: var(--space-2);" %>
  <%= select_tag 'integration_setting[settings][widget_language]',
      options_for_select([['Русский', 'ru-RU'], ['Английский', 'en-US']], settings['widget_language'] || 'ru-RU'),
      style: "width: 100%; padding: var(--space-3); border: 2px solid var(--gray-200); border-radius: var(--radius-md); font-size: 1rem;" %>
</div>

<div style="display: flex; align-items: center; gap: var(--space-3); padding: var(--space-3); background: #fef3c7; border-radius: var(--radius-md);">
  <%= check_box_tag 'integration_setting[settings][test_mode]', 'true', settings['test_mode'] != false, style: "width: 18px; height: 18px; cursor: pointer;" %>
  <%= label_tag 'integration_setting[settings][test_mode]', 'Тестовый режим (не снимать деньги)', style: "font-weight: 600; color: #92400e; cursor: pointer;" %>
</div>
